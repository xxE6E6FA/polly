{
  "name": "polly",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "type": "module",
  "packageManager": "bun@1.3.2",
  "scripts": {
    "dev": "concurrently -n vite,convex -c cyan,magenta \"vite\" \"NODE_ENV=development convex dev\"",
    "dev:convex": "NODE_ENV=development convex dev",
    "build": "NODE_ENV=production sh -c \"convex deploy --verbose --typecheck disable && vite build\"",
    "fix": "biome check --write .",
    "check": "biome ci . && react-compiler-healthcheck && vite build",
    "typecheck": "tsgo --noEmit -p tsconfig.tsgo.json",
    "lint:file": "biome check --write",
    "check:file": "biome check",
    "check:json": "biome ci --reporter=json .",
    "test": "NODE_ENV=test bun test",
    "test:watch": "NODE_ENV=test bun test --watch",
    "prepare": "husky",
    "clear-db": "bun scripts/clear-database.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.9",
    "@ai-sdk/google": "^3.0.6",
    "@ai-sdk/groq": "^3.0.4",
    "@ai-sdk/openai": "^3.0.7",
    "@ai-sdk/openai-compatible": "^2.0.4",
    "@ai-sdk/react": "^3.0.6",
    "@anthropic-ai/sdk": "^0.71.2",
    "@base-ui/react": "^1.0.0",
    "@clerk/clerk-react": "^5.61.1",
    "@llm-ui/code": "^0.13.3",
    "@llm-ui/markdown": "^0.13.3",
    "@llm-ui/react": "^0.13.3",
    "@openrouter/ai-sdk-provider": "^2.1.1",
    "@phosphor-icons/react": "^2.1.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/katex": "^0.16.7",
    "@vercel/analytics": "^1.6.1",
    "@vercel/node": "^5.5.16",
    "ai": "^6.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "convex": "^1.32.0",
    "date-fns": "^4.1.0",
    "dedent": "^1.7.1",
    "embla-carousel-react": "^8.6.0",
    "exa-js": "2.4.0",
    "framer-motion": "^12.24.12",
    "frimousse": "^0.3.0",
    "fuse.js": "^7.1.0",
    "heic2any": "^0.0.4",
    "humanize-ai-lib": "^1.0.0",
    "idb-keyval": "^6.2.2",
    "jose": "^6.1.3",
    "jszip": "^3.10.1",
    "katex": "^0.16.27",
    "markdown-to-jsx": "^9.5.1",
    "motion": "^12.34.3",
    "postcss": "^8.5.4",
    "prism-react-renderer": "^2.4.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-easy-crop": "^5.5.6",
    "react-markdown": "^10.1.0",
    "react-router": "^7.12.0",
    "react-router-dom": "^7.12.0",
    "react-virtuoso": "^4.18.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "replicate": "^1.0.1",
    "sonner": "^2.0.5",
    "svix": "^1.46.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.2.1",
    "tailwindcss-animate": "^1.0.7",
    "use-sync-external-store": "^1.2.2",
    "use-undo": "^1.1.1",
    "vaul": "^1.1.2",
    "zod": "^4.3.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-syntax-typescript": "^7.27.0",
    "@biomejs/biome": "^2.3.11",
    "@happy-dom/global-registrator": "^20.1.0",
    "@tailwindcss/postcss": "^4.2.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.1",
    "@types/bun": "latest",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript/native-preview": "^7.0.0-dev.20260220.1",
    "@vitejs/plugin-react": "^5.1.4",
    "babel-plugin-react-compiler": "1.0.0",
    "bun-plugin-tailwind": "^0.1.2",
    "concurrently": "^9.2.1",
    "convex-test": "^0.0.41",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "react-compiler-healthcheck": "^1.0.0",
    "typescript": "^5",
    "vite": "^8.0.0-beta.15"
  },
  "overrides": {
    "browserslist": "^4.28.1",
    "baseline-browser-mapping": "^2.9.19"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched"
    ],
    "*.{ts,tsx}": [
      "bash -c 'tsgo --noEmit -p tsconfig.tsgo.json'",
      "react-compiler-healthcheck"
    ],
    "*.{test,spec}.{ts,tsx}": [
      "bash -c 'NODE_ENV=test bun test --pass-with-no-tests'"
    ],
    "convex/_generated/**": []
  }
}
