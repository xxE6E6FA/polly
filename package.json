{
  "name": "polly",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun run scripts/dev.ts",
    "dev:convex": "NODE_ENV=development convex dev",
    "build": "NODE_ENV=production sh -c \"convex deploy --verbose --typecheck disable && bun run scripts/build-frontend.ts\"",
    "fix": "biome check --write .",
    "check": "biome ci . && react-compiler-healthcheck && bun run scripts/build-frontend.ts",
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=test bun test",
    "test:watch": "NODE_ENV=test bun test --watch",
    "prepare": "husky",
    "clear-db": "bun scripts/clear-database.ts",
    "clear-auth": "bun scripts/clear-auth-tables.ts"
  },
  "dependencies": {
