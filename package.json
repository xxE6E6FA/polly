  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@edge-runtime/vm": "^5.0.0",
    "@happy-dom/global-registrator": "^16.7.3",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@types/bun": "latest",
    "@types/glob": "^8.1.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
