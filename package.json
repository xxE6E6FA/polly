{
  "name": "polly",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "convex deploy && vite build",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "compiler:check": "react-compiler-healthcheck",
    "check": "biome check . && pnpm build",
    "check:write": "biome check --write .",
    "imports:organize": "biome check --write --organize-imports-enabled=true .",
    "check:ci": "biome ci . && pnpm compiler:check",
    "prepare": "husky",
    "clear-db": "tsx scripts/clear-database.ts",
    "clear-auth": "tsx scripts/clear-auth-tables.ts",
    "test": "vitest",
    "test:browser": "vitest --environment=jsdom",
    "test:convex": "vitest --environment=edge-runtime",
    "test:ci": "vitest run",
    "test:changed": "vitest run --changed",
    "test:related": "vitest related --run",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "coverage:ci": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "pre-commit": "pnpm typecheck && pnpm lint && pnpm compiler:check && pnpm test:changed",
    "validate": "pnpm typecheck && pnpm lint && pnpm test:ci"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.19",
    "@ai-sdk/groq": "^1.1.0",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/react": "^1.2.12",
    "@anthropic-ai/sdk": "^0.55.0",
    "@auth/core": "^0.39.1",
    "@convex-dev/auth": "^0.0.87",
    "@llm-ui/code": "^0.13.3",
    "@llm-ui/markdown": "^0.13.3",
    "@llm-ui/react": "^0.13.3",
    "@openrouter/ai-sdk-provider": "^0.7.1",
    "@phosphor-icons/react": "^2.1.10",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/typography": "^0.5.16",
    "@types/katex": "^0.16.7",
    "@vercel/analytics": "^1.5.0",
    "@vercel/node": "^5.3.7",
    "@vitejs/plugin-react": "^5.0.1",
    "ai": "^4.3.16",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "convex": "^1.24.8",
    "date-fns": "^4.1.0",
    "dedent": "^1.6.0",
    "embla-carousel-react": "^8.6.0",
    "exa-js": "^1.8.17",
    "frimousse": "^0.3.0",
    "fuse.js": "^7.1.0",
    "humanize-ai-lib": "^1.0.0",
    "idb-keyval": "^6.2.2",
    "jszip": "^3.10.1",
    "katex": "^0.16.22",
    "markdown-to-jsx": "^7.7.8",
    "postcss": "^8.5.4",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.6.2",
    "react-router-dom": "^7.8.2",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "replicate": "^1.0.1",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "use-undo": "^1.1.1",
    "vaul": "^1.1.2",
    "virtua": "^0.41.5",
    "zod": "^3.25.76",
    "use-sync-external-store": "^1.2.2",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@edge-runtime/vm": "^5.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vercel/react-router": "^1.1.2",
    "@vitest/coverage-v8": "3.2.4",
    "babel-plugin-react-compiler": "1.0.0",
    "convex-test": "^0.0.38",
    "dotenv": "^16.5.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "react-compiler-healthcheck": "^1.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "biome format --write --files-ignore-unknown=true --no-errors-on-unmatched",
      "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched"
    ],
    "*.{ts,tsx}": ["bash -c 'tsc --noEmit'", "vitest run --changed"],
    "*.{js,jsx}": ["vitest run --changed"],
    "convex/_generated/**": []
  }
}
