{
  "name": "polly",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n vite,convex -c cyan,magenta \"vite\" \"NODE_ENV=development convex dev\"",
    "dev:convex": "NODE_ENV=development convex dev",
    "build": "NODE_ENV=production sh -c \"convex deploy --verbose --typecheck disable && vite build\"",
    "fix": "biome check --write .",
    "check": "biome ci . && react-compiler-healthcheck && vite build",
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=test bun test",
    "test:watch": "NODE_ENV=test bun test --watch",
    "prepare": "husky",
    "clear-db": "bun scripts/clear-database.ts",
    "clear-auth": "bun scripts/clear-auth-tables.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^2.0.0",
    "@ai-sdk/groq": "^2.0.0",
    "@ai-sdk/openai": "^2.0.0",
    "@ai-sdk/openai-compatible": "^1.0.28",
    "@ai-sdk/react": "^2.0.0",
    "@anthropic-ai/sdk": "^0.55.0",
    "@auth/core": "^0.39.1",
    "@base-ui-components/react": "^1.0.0-beta.4",
    "@convex-dev/auth": "^0.0.90",
    "@llm-ui/code": "^0.13.3",
    "@llm-ui/markdown": "^0.13.3",
    "@llm-ui/react": "^0.13.3",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "@phosphor-icons/react": "^2.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/katex": "^0.16.7",
    "@vercel/analytics": "^1.5.0",
    "@vercel/node": "^5.3.7",
    "ai": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "convex": "^1.31.2",
    "date-fns": "^4.1.0",
    "dedent": "^1.6.0",
    "embla-carousel-react": "^8.6.0",
    "exa-js": "^2.0.0",
    "framer-motion": "^12.23.24",
    "frimousse": "^0.3.0",
    "fuse.js": "^7.1.0",
    "heic2any": "^0.0.4",
    "humanize-ai-lib": "^1.0.0",
    "idb-keyval": "^6.2.2",
    "jszip": "^3.10.1",
    "katex": "^0.16.22",
    "markdown-to-jsx": "^7.7.8",
    "postcss": "^8.5.4",
    "prism-react-renderer": "^2.4.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-easy-crop": "^5.5.5",
    "react-markdown": "^10.1.0",
    "react-router": "^7.6.2",
    "react-router-dom": "^7.9.5",
    "react-virtuoso": "^4.17.0",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "replicate": "^1.0.1",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.0",
    "tailwindcss-animate": "^1.0.7",
    "use-sync-external-store": "^1.2.2",
    "use-undo": "^1.1.1",
    "vaul": "^1.1.2",
    "zod": "^4.1.8",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@edge-runtime/vm": "^5.0.0",
    "@happy-dom/global-registrator": "^16.7.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@types/bun": "latest",
    "@types/glob": "^8.1.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vercel/react-router": "^1.1.2",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "1.0.0",
    "bun-plugin-tailwind": "^0.1.2",
    "concurrently": "^9.2.1",
    "convex-test": "^0.0.38",
    "dotenv": "^16.5.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "react-compiler-healthcheck": "^1.0.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5",
    "vite": "^7.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched"
    ],
    "*.{ts,tsx}": ["bash -c 'tsc --noEmit'", "react-compiler-healthcheck"],
    "*.{test,spec}.{ts,tsx}": [
      "bash -c 'NODE_ENV=test bun test --pass-with-no-tests'"
    ],
    "convex/_generated/**": []
  }
}
