{
  "include": ["./**/*", "../shared/**/*", "../config/**/*"],
  "exclude": [
    "./_generated",
    "./schema.js",
    "./schema.js.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../shared/**/*.test.ts",
    "../shared/**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./../src/*"],
      "@convex/*": ["./../convex/*"],
      "@shared/*": ["./../shared/*"],
      "@config/*": ["./../config/*"]
    }
  }
}
